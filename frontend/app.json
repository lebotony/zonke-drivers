{
  "expo": {
    "name": "zonke_drivers",
    "slug": "zonke_drivers",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "zonkedrivers",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "router": {
      "appDir": "frontend/src/app"
    },
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.zonke-drivers"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "softwareKeyboardLayoutMode": "resize",
      "edgeToEdgeEnabled": true,
      "useNextNotificationsApi": true,
      "package": "com.anonymous.zonke_drivers"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#76CBED"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
